"use client";

import { useState, useCallback, useRef, useEffect } from 'react';
import { GoogleMap, useJsApiLoader, Marker, InfoWindow } from '@react-google-maps/api';
import { Card } from '../ui/card';

// API response types
interface PlacesApiResponse {
  stores: Array<{
    id: string;
    name: string;
    position: {
      lat: number;
      lng: number;
    };
    address: string;
    rating: number;
    craftTypes: string[];
    userRatingsTotal?: number;
    reviews?: Array<{
      authorName?: string;
      rating?: number;
      text?: string;
      relativeTime?: string;
    }>;
  }>;
  fallback?: string;
}

// Define interfaces for our data structures
// API response types
interface PlacesApiResponse {
  stores: StoreLocation[];
  fallback?: string;
}

// Store location type
interface StoreLocation {
  id: string;
  name: string;
  position: {
    lat: number;
    lng: number;
  };
  address: string;
  rating: number;
  craftTypes: string[];
  openingHours?: string;
  contact?: string;
  userRatingsTotal?: number;
  website?: string;
  reviews?: Array<{
    authorName?: string;
    rating?: number;
    text?: string;
    relativeTime?: string;
  }>;
}

interface MapProps {
  initialCenter?: { lat: number; lng: number };
  zoom?: number;
  stores?: StoreLocation[];
  onResults?: (stores: StoreLocation[]) => void;
}

const defaultCenter = { lat: 20.5937, lng: 78.9629 }; // Center of India

// Keep libraries as a stable reference so the loader doesn't warn about
// a new array being passed on each render (see performance warning).
const MAP_LIBRARIES = ['places'] as const;

// Local helper: infer simple craft tags from name (same heuristics used server-side)
function inferCraftTypes(name: string): string[] {
  const lower = name.toLowerCase();
  const tags: string[] = [];
  if (/(potter|ceramic|clay)/.test(lower)) tags.push('pottery');
  if (/(textile|fabric|weav|silk|khadi|saree)/.test(lower)) tags.push('textiles');
  if (/(jewel|silver|gold|bead)/.test(lower)) tags.push('jewelry');
  if (/(wood|carv|bamboo|cane)/.test(lower)) tags.push('woodwork');
  if (tags.length === 0) tags.push('handicraft');
  return tags;
}

export default function StoreLocator({ 
  initialCenter = defaultCenter, 
  zoom = 5,
  stores = [],
  onResults,
}: MapProps) {
  // Use the public key for Maps JS API (maps, geocoding, etc)
  const mapsApiKey = String(process.env.NEXT_PUBLIC_GOOGLE_MAPS_API_KEY || '');
  if (!mapsApiKey) {
    console.error('Missing NEXT_PUBLIC_GOOGLE_MAPS_API_KEY for Maps JavaScript API');
  }

  const [selectedStore, setSelectedStore] = useState<StoreLocation | null>(null);
  const [map, setMap] = useState<google.maps.Map | null>(null);
  const mapRef = useRef<google.maps.Map | null>(null);

  // Client-side fallback: if the server did not return stores (or /api/stores is blocked by API restrictions),
  // use the Maps JavaScript PlacesService in the browser to search nearby places.
  const [clientStores, setClientStores] = useState<StoreLocation[]>([]);
  const [usedClientFallback, setUsedClientFallback] = useState(false);

  // Run a client-side search using the new Places API directly when no server stores are provided
  // Load stores from server endpoint
  const loadStores = useCallback(async () => {
    try {
      // Server endpoint has access to the Places API key
      const response = await fetch(`/api/stores?lat=${initialCenter.lat}&lng=${initialCenter.lng}&radiusKm=15`);
      
      if (!response.ok) {
        const error = await response.json();
        console.error('API Error:', error);
        return;
      }

      const data = await response.json();
      if (!data.stores || !Array.isArray(data.stores)) {
        console.error('Invalid API response:', data);
        return;
      }

      const mapped: StoreLocation[] = data.stores.map((store: any) => ({
        id: store.id || String(Math.random()),
        name: store.name || 'Unknown',
        position: {
          lat: store.position.lat || 0,
          lng: store.position.lng || 0
        },
        address: store.address || '',
        rating: store.rating || 0,
        craftTypes: store.craftTypes || [],
        userRatingsTotal: store.userRatingsTotal || 0,
        reviews: store.reviews || []
      }));

      setClientStores(mapped);
      setUsedClientFallback(true);
      
      // Notify parent if provided
      try {
        onResults?.(mapped);
      } catch (e) {
        console.error('Error notifying parent of results:', e);
      }
        body: JSON.stringify({
          includedTypes: [
            "art_gallery",
            "home_goods_store",
            "store",
            "museum",
            "shopping_mall",
            "gift_shop",
            "jewelry_store",
            "furniture_store"
          ],
          maxResultCount: 20,
          locationRestriction: {
            circle: {
              center: {
                latitude: initialCenter.lat,
                longitude: initialCenter.lng
              },
              radius: 15000
            }
          },
          rankPreference: "DISTANCE"
        })
      });

      if (!response.ok) {
        console.error('Places API Error:', response.status, response.statusText);
        return;
      }

      const data = await response.json() as PlacesApiResponse;
      if (!data.places || !Array.isArray(data.places)) {
        console.error('Invalid Places API response:', data);
        return;
      }

      const mapped: StoreLocation[] = data.places.map((place) => ({
        id: place.id || String(Math.random()),
        name: place.displayName?.text || 'Unknown',
        position: {
          lat: place.location?.latitude || 0,
          lng: place.location?.longitude || 0
        },
        address: place.formattedAddress || '',
        rating: place.rating || 0,
        craftTypes: inferCraftTypes(place.displayName?.text || ''),
        userRatingsTotal: place.userRatingCount || 0
      }));

      setClientStores(mapped);
      setUsedClientFallback(true);
      // notify parent if provided
      try { onResults && onResults(mapped); } catch (e) {
        console.error('Error notifying parent of results:', e);
      }
    } catch (e) {
      console.error('Error fetching from Places API:', e);
    }
  }, [initialCenter, apiKey]);

  // When server-provided stores become available, notify parent
  useEffect(() => {
    if (onResults && stores && stores.length > 0) {
      try { onResults(stores); } catch (e) {}
    }
  }, [stores, onResults]);

  // Types for Places API response
  interface PlacesApiResponse {
    places: Array<{
      id?: string;
      displayName?: {
        text: string;
      };
      formattedAddress?: string;
      location?: {
        latitude: number;
        longitude: number;
      };
      rating?: number;
      userRatingCount?: number;
    }>;
  }

  // Call the loader hook unconditionally (React rules) but it will attempt to load the script with the provided apiKey.
  const { isLoaded, loadError } = useJsApiLoader({
    googleMapsApiKey: mapsApiKey, // Use public key for Maps JS API
    // cast to any to satisfy library typing — MAP_LIBRARIES is a stable const
    libraries: MAP_LIBRARIES as any,
  });

  const onLoad = useCallback((map: google.maps.Map) => {
    mapRef.current = map;
    setMap(map);
  }, []);

  const onUnmount = useCallback(() => {
    mapRef.current = null;
    setMap(null);
  }, []);

  

  // If the project does not expose a client key, show a helpful message.
  if (!apiKey) {
    return (
      <div className="w-full h-[400px] flex items-center justify-center">
        <Card className="p-4 bg-white shadow">
          <h3 className="font-semibold mb-2">Google Maps API key missing</h3>
          <p className="text-sm text-gray-700 mb-2">To display the map locally, add your key to the project root <code>.env.local</code>:</p>
          <pre className="text-xs bg-gray-100 p-2 rounded">NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=YOUR_KEY_HERE</pre>
          <p className="text-xs text-gray-500 mt-2">Do not commit secrets. Use <code>.env.example</code> as a template.</p>
        </Card>
      </div>
    );
  }

  if (loadError) {
    // Provide a slightly more helpful message in the UI for debugging.
    return (
      <div className="w-full h-[400px] flex items-center justify-center">
        <Card className="p-4 bg-white shadow">
          <h3 className="font-semibold mb-2">Error loading Google Maps</h3>
          <p className="text-sm text-gray-700">{String(loadError)}</p>
          <p className="text-xs text-gray-500 mt-2">Check your API key, internet connection and API restrictions in Google Cloud Console.</p>
        </Card>
      </div>
    );
  }

  if (!isLoaded) {
    return <div>Loading maps...</div>;
  }


  return (
    <div className="w-full h-[600px] relative">
      <div className="absolute top-4 left-4 z-10 w-64">
        <Card className="p-4 bg-white shadow-lg">
          <h3 className="font-semibold mb-2">Find Nearby Stores</h3>
          <input
            type="text"
            placeholder="Search by craft or location..."
            className="w-full p-2 border rounded mb-2"
          />
          <select className="w-full p-2 border rounded">
            <option value="">Filter by craft type</option>
            <option value="pottery">Pottery</option>
            <option value="textiles">Textiles</option>
            <option value="jewelry">Jewelry</option>
            {/* Add more craft types */}
          </select>
        </Card>
      </div>

      <GoogleMap
        mapContainerClassName="w-full h-full"
        center={initialCenter}
        zoom={zoom}
        onLoad={onLoad}
        onUnmount={onUnmount}
        options={{
          mapTypeControl: false,
          streetViewControl: false,
          fullscreenControl: true,
          zoomControl: true,
        }}
      >
        {(stores && stores.length > 0 ? stores : clientStores).map((store) => (
          <Marker
            key={store.id}
            position={store.position}
            onClick={() => setSelectedStore(store)}
          />
        ))}

        {selectedStore && (
          <InfoWindow
            position={selectedStore.position}
            onCloseClick={() => setSelectedStore(null)}
          >
            <div className="p-2 max-w-xs">
              <h3 className="font-semibold mb-1">{selectedStore.name}</h3>
              <p className="text-sm text-gray-600 mb-1">{selectedStore.address}</p>
              <p className="text-sm mb-1">Rating: {selectedStore.rating}/5 ({selectedStore.userRatingsTotal ?? 0})</p>
              {selectedStore.openingHours && (
                <p className="text-sm mb-1">Hours: {selectedStore.openingHours}</p>
              )}
              <div className="flex flex-wrap gap-1 mt-1">
                {selectedStore.craftTypes.map((craft) => (
                  <span
                    key={craft}
                    className="px-2 py-1 bg-gray-100 rounded-full text-xs"
                  >
                    {craft}
                  </span>
                ))}
              </div>
              {selectedStore.reviews && selectedStore.reviews.length > 0 && (
                <div className="mt-2 border-t pt-2">
                  <p className="text-xs font-semibold mb-1">Recent reviews</p>
                  {selectedStore.reviews.slice(0, 2).map((r, i) => (
                    <p key={i} className="text-xs text-gray-700 mb-1">“{(r.text || '').slice(0, 120)}{(r.text || '').length > 120 ? '…' : ''}”</p>
                  ))}
                </div>
              )}
            </div>
          </InfoWindow>
        )}
      </GoogleMap>
      {/* Debug/status overlay */}
      <div className="absolute bottom-4 right-4 z-20">
        <Card className="p-2 bg-white/90 shadow">
          <div className="text-xs text-gray-700">
            <div>Maps loaded: {String(isLoaded)}</div>
            <div>Client fallback: {String(usedClientFallback)}</div>
            <div>Markers: {(stores && stores.length > 0 ? stores.length : clientStores.length)}</div>
          </div>
        </Card>
      </div>
    </div>
  );
}